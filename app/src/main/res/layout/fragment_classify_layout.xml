<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<com.other.project.live.widget.TopGroup
    android:id="@+id/top_group"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_group_height"/>
    <TextView
        android:id="@+id/text_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cook_hint_height"
        android:background="@color/red"
        android:text="亲爱的用户，请优先填写服务地址和时间"
        android:gravity="center"
        android:textColor="@color/chun_white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cook_address_time_height"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/address"
            android:layout_width="@dimen/zero_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:gravity="center"
            android:textSize="@dimen/cook_address_time_size"
            android:text="@string/address"/>
        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/filter_color"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/time"
            android:textSize="@dimen/cook_address_time_size"
            android:layout_width="@dimen/zero_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="@string/time"/>
    </LinearLayout>
    <TextView
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cook_filter_height"
        android:text="@string/filter"
        android:gravity="center"
        android:textColor="@color/gray"/>
   <android.support.v4.widget.SwipeRefreshLayout
       android:id="@+id/refresh"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
  <android.support.v7.widget.RecyclerView
    android:id="@+id/recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
   </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>