<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eat_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.other.project.live.activities.YongCanActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_group_height"
        android:background="@color/top_background_white"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/top_position"
            android:layout_width="0dp"
            android:layout_height="@dimen/top_img_size"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/head_back"
            android:text="返回"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/top_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="快速预定"
            android:textSize="@dimen/top_text_size" />

        <TextView
            android:id="@+id/top_provision"
            android:layout_width="0dp"
            android:layout_height="@dimen/top_img_size"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:gravity="center"
        android:text="选择服务信息"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/my_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#f1e8e8"
            android:gravity="center"
            android:text="13392464637 \n青岛市"
            android:textColor="#f75757" />

        <TextView
            android:id="@+id/eat_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#f1e8e8"
            android:gravity="center"
            android:text="选择 \n用餐时间"

            android:textColor="#f75757" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:gravity="center"
        android:text="套餐/代买"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f1e8e8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/del_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/jian" />

        <TextView
            android:id="@+id/number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/add_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/jia" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#fad7d7">


    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f1e8e8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/zhuye"
            android:gravity="center"
            android:text="自备食材"
            android:textSize="12sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#facece"></View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/gouwuche"
            android:gravity="center"
            android:text="免费代买"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:gravity="center"
        android:text="备注/标签"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="可手动输入..." />

        <com.other.project.live.widget.CustomFlowLayout
            android:id="@+id/flow_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp">


        </com.other.project.live.widget.CustomFlowLayout>

    </LinearLayout>

    <Button
        android:id="@+id/yuding"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="立即预定" />
</LinearLayout>
